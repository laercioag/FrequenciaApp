<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/period_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minHeight="88dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:background="?android:selectableItemBackground">

    <ImageView
        android:id="@+id/period_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_turned_in_not_black_48dp"/>


    <TextView
        android:id="@+id/period_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/period_icon"/>

    <TextView
        android:id="@+id/period_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/period_name"
        android:textColor="@color/secondary_text"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@id/period_icon"/>
</RelativeLayout>